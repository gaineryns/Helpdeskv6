{% extends 'userBundle::layout.html.twig' %}

{% block fos_user_content %}


    <section class="container login-form">
        <section>

            <form method="post" action="{{ path('fos_user_security_check') }}"  role="login">
                <img src="{{ asset('assets/vendor/images/logo.png') }}" alt="" class="img-responsive" />

                {% if error %}
                    <div class="alert alert-danger">{{ error.message }}</div>
                {% endif %}
                <div class="form-group">
                    <input type="text" id="username" name="_username" required class="form-control" placeholder="Enter email or nickname" />
                    <span class="glyphicon glyphicon-user"></span>
                </div>

                <div class="form-group">
                    <input type="password" id="password" name="_password" required class="form-control" placeholder="Enter password" />
                    <span class="glyphicon glyphicon-lock"></span>
                </div>
                <button type="submit" name="go" class="btn btn-primary btn-block">Connexion</button>

                <a href="#">Reset password</a>
            </form>
        </section>
    </section>





{% endblock %}